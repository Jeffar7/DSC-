<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:padding="16dp"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Scroolview hanya bisa punya 1 child layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:src="@drawable/ic_restaurant_black_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Jeffar Manurung"
                    android:textStyle="bold"
                    android:textSize="22sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="120 Points"
                    android:background="#eee"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <ImageView
                android:src="@drawable/ic_flight_black_24dp"
                android:background="#09357C"
                android:tint="#FFF"

                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <TextView

                android:text="Flight"
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <ImageView
                android:src="@drawable/ic_hotel_black_24dp"
                android:background="#7E1A08"
                android:tint="#FFF"

                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <TextView

                android:text="Hotels"
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Land -->

            <ImageView
                android:src="@drawable/ic_flight_land_black_24dp"
                android:background="@color/colorPrimary"
                android:tint="#FFF"

                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <TextView

                android:text="Flight + Hotel"
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>